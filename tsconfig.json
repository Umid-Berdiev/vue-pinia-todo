{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "@intlify/unplugin-vue-i18n/messages",
      "typed-router.d.ts"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "isolatedModules": true,
    "noEmit": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "auto-imports.d.ts",
    "typed-router.d.ts",
    "components.d.ts",
    "components-global.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
